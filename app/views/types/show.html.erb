<h1><%= @Type.name %></h1>

<dl>
	<dt>Type Name</dt>
	<dd><%= @type.name %></dd>
</dl>

<%= link_to "Edit", edit_type_path(@type), class: "btn btn-primary" %>
<%= link_to "Delete", type_path(@type), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to delete #{@type.name}? This action cannot be undone."} %>
<%= link_to "Show All Types", types_path %>
